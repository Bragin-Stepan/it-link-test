{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "rootDir": "../",
  "testRegex": ".e2e-spec.ts$",
  "modulePaths": ["<rootDir>"],
  "moduleNameMapper": {
    "^@/src/(.*)$": "<rootDir>/src/$1",
    "^@/core/(.*)$": "<rootDir>/src/core/$1",
    "^@/shared/(.*)$": "<rootDir>/src/shared/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
